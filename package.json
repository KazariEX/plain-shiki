{
  "name": "plain-shiki",
  "type": "module",
  "version": "0.2.0",
  "packageManager": "pnpm@10.8.1",
  "description": "Highlight your plaintext via Shiki",
  "author": "KazariEX",
  "license": "MIT",
  "repository": "KazariEX/plain-shiki",
  "keywords": [
    "shiki",
    "highlight",
    "plaintext"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "build:playground": "pnpm -C playground run generate",
    "dev": "tsdown -w",
    "prepack": "pnpm run build",
    "release": "bumpp --no-push -c \"release: v%s\"",
    "test": "vitest",
    "eslint": "eslint ."
  },
  "peerDependencies": {
    "shiki": ">=1.22.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.5.1",
    "@types/node": "^22.13.9",
    "@zinkawaii/eslint-config": "^0.2.0",
    "@zinkawaii/stylelint-config": "^0.3.0",
    "bumpp": "^10.0.3",
    "eslint": "^9.21.0",
    "shiki": "^3.1.0",
    "stylelint": "^16.15.0",
    "tsdown": "^0.8.0",
    "vitest": "^3.0.7"
  }
}