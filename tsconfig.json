{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": [
    "./src/**/*.ts",
    "./playground/**/*.ts"
  ],
  "exclude": [
    "./dist"
  ]
}